{
  "name": "@agents/base",
  "version": "0.1.0",
  "description": "Base framework for building persistent AI employee agents",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:ui": "tsx scripts/run-ui.ts build",
    "build:all": "npm run build && npm run build:ui",
    "dev": "tsx scripts/run-ui.ts dev",
    "dev:backend": "node -e \"console.log('No backend runtime entrypoint is defined yet. Use npm run dev for UI, or add a server entrypoint and update dev:backend.')\"",
    "watch:types": "tsc --noEmit --watch",
    "dev:ui": "tsx scripts/run-ui.ts dev",
    "start:ui": "tsx scripts/run-ui.ts start",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "openfga:bootstrap": "tsx src/scripts/openfga-bootstrap.ts"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@openfga/sdk": "^0.9.2",
    "@prisma/client": "^6.0.0",
    "@slack/bolt": "^4.0.0",
    "@temporalio/client": "^1.14.1",
    "@temporalio/worker": "^1.14.1",
    "@temporalio/workflow": "^1.14.1",
    "@types/dockerode": "^4.0.1",
    "dockerode": "^4.0.9",
    "dotenv": "^16.3.1",
    "langfuse": "^3.38.6",
    "node-cron": "^3.0.3",
    "openai": "^4.77.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "prisma": "^6.0.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist/",
    "prisma/schema.prisma"
  ]
}

# Required
DATABASE_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require"

# Provide at least one LLM key based on what models your agents use.
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
OPENAI_MODEL="gpt-4o-mini"
# Optional model override for strict resume JSON generation.
OPENAI_RESUME_MODEL="gpt-4o-mini"

# Optional defaults (safe to leave as-is)
PORT=3100
HOST="0.0.0.0"
NODE_ENV="development"
LOG_LEVEL="info"

# Authentication (UI)
# Set a long random value in production.
NEXTAUTH_SECRET=""
# Optional explicit URL (required in some production deployments).
NEXTAUTH_URL="http://localhost:3100"

# Google OAuth (for "sign in with Google")
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Optional credential login guardrails for single-deployment mode.
# If APP_LOGIN_PASSWORD is set, password login must match.
APP_LOGIN_PASSWORD=""
# Optional comma-separated allowlist (emails).
APP_LOGIN_ALLOWED_EMAILS=""
